pipeline {
    agent any
    tools{
        maven 'maven'
    }
    stages {
        stage("git-Checkout") {
            steps {
                echo "Performing Git Checkout"
            }
        }
        stage("Build") {
            steps {
                // echo "Building"
                sh 'mvn clean package'
            }
        }
        stage("Test") {
            steps {
                // echo "Testing"
                sh 'mvn test'
            }
        }
        stage ("Run JAR") {
            steps {
                script{
                    def output = sh(script: 'java -jar target/simple-java-project-1.0-SNAPSHOT.jar', returnStdout: true).trim()
                     echo "Output from JAR: ${output}"

                }
            }
        }
    }
}